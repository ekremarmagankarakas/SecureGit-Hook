{
  "enabled": true,
  "scan_entire_repo": false,
  "allowlist": {
    "files": [],
    "paths": [
      "node_modules/",
      "venv/",
      ".venv/",
      "__pycache__/",
      ".git/",
      "dist/",
      "build/",
      ".npm/",
      "vendor/",
      "bower_components/",
      ".tox/",
      ".pytest_cache/",
      ".next/",
      ".vscode/",
      ".idea/",
      ".gradle/",
      "bin/",
      "obj/",
      "packages/",
      "jspm_packages/",
      "target/",
      ".terraform/"
    ],
    "patterns": [],
    "lines": []
  },
  "valid_extensions": [
    ".py",
    ".js",
    ".ts",
    ".go",
    ".env",
    ".json",
    ".yaml",
    ".yml",
    ".xml",
    ".conf",
    ".ini",
    ".toml",
    ".rb",
    ".php"
  ],
  "prohibited_files": [
    ".env",
    ".env.local",
    ".env.development",
    ".env.test",
    ".env.production",
    "credentials.json",
    "config.local.json",
    "secrets.yaml",
    ".htpasswd",
    "id_rsa",
    "id_dsa",
    ".keystore",
    ".p12",
    ".pfx",
    "oauth_token.json",
    "service-account.json"
  ],
  "prohibited_patterns": [
    ".*\\.pem$",
    ".*\\.key$",
    ".*\\.pkcs12$",
    ".*\\.jks$",
    ".*secret.*\\.json$",
    ".*password.*\\.txt$",
    ".*credential.*\\.json$",
    ".*\\.keystore$"
  ],
  "patterns": [
    "API_KEY\\s*=\\s*[\"'].*[\"']",
    "SECRET\\s*=\\s*[\"'].*[\"']",
    "PASSWORD\\s*=\\s*[\"'].*[\"']",
    "TOKEN\\s*=\\s*[\"'].*[\"']",
    "PASSW(OR)?D\\s*=\\s*[\"'].*[\"']",
    "PWD\\s*=\\s*[\"'].*[\"']",
    "PASSWD\\s*=\\s*[\"'].*[\"']",
    "KEY\\s*=\\s*[\"'].*[\"']",
    "APIKEY\\s*=\\s*[\"'].*[\"']",
    "AUTH\\s*=\\s*[\"'].*[\"']",
    "CREDENTIAL\\s*=\\s*[\"'].*[\"']",
    "PRIVATE_KEY\\s*=\\s*[\"'].*[\"']",
    "(access|secret|api|auth|client|token)[-._]?(key|secret|token|id|password)[\\s=:]+[\"']?[A-Za-z0-9+/]{8,}[\"']?",
    "(AKIA|A3T|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{12,}",
    "aws[._-]?access[._-]?key[._-]?id\\s*=\\s*[\"']?\\w+[\"']?",
    "aws[._-]?secret[._-]?access[._-]?key\\s*=\\s*[\"']?\\w+[\"']?",
    "aws[._-]?account[._-]?id\\s*=\\s*[\"']?\\d+[\"']?",
    "(?i)(jdbc|mongodb(\\+srv)?|mysql|postgres|postgresql|mssql|sqlite|redis|oracle):\\/\\/[a-zA-Z0-9]+:[^@]+@",
    "(?i)mongodb[+:].*(?:username|password).*:",
    "(?i)(host|server|db|database|username|user|uid|password|pwd|passwd)[\\s=:]",
    "(?i)connection[._-]string\\s*=\\s*[\"'].*[\"']",
    "gh[pousr]_[A-Za-z0-9_]{16,}",
    "sk_live_[0-9a-zA-Z]{24,}",
    "rk_live_[0-9a-zA-Z]{24,}",
    "sq0atp-[0-9A-Za-z\\-_]{22}",
    "sq0csp-[0-9A-Za-z\\-_]{43}",
    "access_token\\$production\\$[0-9a-z]{16}\\$[0-9a-f]{32}",
    "amzn\\.mws\\.[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
    "EAACEdEose0cBA[0-9A-Za-z]+",
    "AIza[0-9A-Za-z\\-_]{35}",
    "ya29\\.[0-9A-Za-z\\-_]+",
    "sk-[A-Za-z0-9]{32,}",
    "ey[A-Za-z0-9_-]{10,}\\.[A-Za-z0-9._-]{10,}\\.[A-Za-z0-9_-]{10,}",
    "-----BEGIN [A-Z ]+ PRIVATE KEY( BLOCK)?-----",
    "-----BEGIN CERTIFICATE-----",
    "xox[pboa]-[0-9]{12}-[0-9]{12}-[0-9]{12}-[a-z0-9]{32}",
    "[h|H][e|E][r|R][o|O][k|K][u|U].*[0-9A-F]{8}-[0-9A-F]{4}-[0-9A-F]{4}-[0-9A-F]{4}-[0-9A-F]{12}",
    "(?i)(encryption|cipher|aes|rsa)[._-]?key\\s*=\\s*[\"'].*[\"']",
    "SK[0-9a-fA-F]{32}",
    "AC[a-z0-9]{32}",
    "ssh-rsa AAAA[0-9A-Za-z+/]+[=]{0,3}",
    "(?i)(api|secret|private|token|auth|key)[\\s=:]+[\"']?[a-zA-Z0-9+/]{32,}[=]{0,2}[\"']?"
  ]
}

